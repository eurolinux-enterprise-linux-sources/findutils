index d6bbaea..f30fe71 100644
--- a/find/pred.c
+++ b/find/pred.c
@@ -684,6 +684,8 @@ impl_pred_exec (const char *pathname,
       /* Actually invoke the command. */
       result = execp->ctl.exec_callback(&execp->ctl,
 					&execp->state);
+      if (local)
+	free_cwd (execp->wd_for_exec);
     }
   if (target != pathname)
     {
